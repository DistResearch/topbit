<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta charset="utf-8" />
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>@ViewBag.Title</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<!--[if lte IE 9]><link href="@Url.Content("~/Content/css/ie.css")" rel="stylesheet" type="text/css" media="screen" /><![endif]-->
<link href="@Url.Content("~/Content/css/1140.css")" rel="stylesheet" type="text/css" media="screen" />
<link href="@Url.Content("~/Content/css/styles.css")" rel="stylesheet" type="text/css" media="screen" />
<link href="@Url.Content("~/Content/css/default.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/css3-mediaqueries.js")" type="text/javascript" ></script>
<script src="@Url.Content("~/Scripts/jquery-1.6.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
@RenderSection("header", false)
</head>
<body>
<div class="container">
    <div id="userheader" class="row">
        <div class="twelvecol last">
            <div class="userframe">
                @if (Request.IsAuthenticated)
                {
                    <text>你好，<strong>@User.Identity.Name</strong> @Html.ActionLink("查看帐号", "Index", "Work")
                    [ @Html.ActionLink("退出", "LogOff", "Account") ]</text>
                }
                else
                {
                    @: 你好，请 @Html.ActionLink("登录", "Login", new { area = "", controller = "Account" }) 或者 @Html.ActionLink("免费注册", "Register", new { area = "", controller = "Account" })
                }
            </div>
        </div>
    </div>
    <div id="topheader" class="row">
        <div class="fourcol">
            <a href="@Url.Action("Index", "Home")" title="TopBit 比特币开放平台"><div class="logo"></div></a>
        </div>
        <div class="menu_area eightcol last">
            <div style="float:right;margin-top:15px;">
                <!--<a href="@Url.Action("Index", "Home")" class="ideas">商城<br/><span class="menu_text">Bitcoin Mall</span></a>
                <a href="@Url.Action("Index", "Home")" class="links">交易<br/><span class="menu_text">Trade Center</span></a>-->
                <a href="@Url.Action("Index", "Home")" class="discuss">讨论<br/><span class="menu_text">Discussion</span></a>
                <a href="@Url.Action("Work", "Home")" class="works">矿池<br/><span class="menu_text">Pool Mining</span></a>
            </div>
        </div>
    </div>
</div>
<div id="search_strip" class="container">
  
</div>
<div id="body_area" class="container">
    <div class="row">
        <div class="page-spacer twelvecol last">
        </div>
    </div>
    @RenderBody()
    <div class="row">
        <div class="page-spacer twelvecol last">
        </div>
    </div>
</div>
<div id="fotter">
    <div class="fotter_links">
        <div align="center"><a href="@Url.Action("Index", "Home")" class="fotterlink">主页</a>  |  <a href="@Url.Action("Privacy", "Home")" class="fotterlink">隐私申明</a>  |  <a href="@Url.Action("Blog", "Home")" class="fotterlink">团队博客</a>  |  <a href="@Url.Action("Weibo", "Home")" class="fotterlink">新浪微博</a>  |  <a href="@Url.Action("API", "Home")" class="fotterlink">开放平台</a></div>
    </div>
    <div class="fotter_copyrights">
        <div align="center">E2 &copy; 2011. All Rights Reserved. Version 1.0</div>
    </div>
    <div class="fotter_validation">
        <div align="center"><a href="http://bitcoin.org" target="_blank" class="xhtml">bitcoin</a> <a href="http://bitecoin.com" target="_blank" class="css">比特币</a><br />
        </div>
    </div>
    <div class="fotter_designed">
        <div align="center">如果喜欢，请捐赠: 1aV6GQEN4YAy65GJsqWhAfKRs1Zq3MWg1</div>
    </div>
</div>
</body>
</html>
