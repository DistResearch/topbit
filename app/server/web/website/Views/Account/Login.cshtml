@model App.Web.Models.LogOnModel

@{
    ViewBag.Title = "登录 TopBit";
}
@section header{
<link href="@Url.Content("~/Content/css/form.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $('form').submit(function () {
            $('input').prop('readonly', true);
            $('#submit').prop('disabled', true).addClass('disabled');
            return true;
        });
    });
</script>
}
<div class="form login-form center">
@Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.")
<br />
@using (Html.BeginForm()) {
    <table>
        <tbody>
            <tr>
                <td class="editor-label">
                    @Html.LabelFor(m => m.Email)
                </td>
                <td class="editor-label" style="width:120px; text-align:right;">
                    <a href="@Url.Action("Register")">免费注册</a>
                </td>
            </tr>
            <tr>
                <td colspan="2" class="editor-field">
                    @Html.TextBoxFor(m => m.Email, new { @Value = "tox.vip@gmail.com" })
                    @Html.ValidationMessageFor(m => m.Email)
                </td>
            </tr>

            <tr>
                <td class="editor-label">
                    @Html.LabelFor(m => m.Password)
                </td>
                <td class="editor-label" style="width:120px; text-align:right;">
                    <a href="@Url.Action("ForgotPassword")">忘记密码</a>
                </td>
            </tr>
            <tr>
                <td colspan="2" class="editor-field">
                    @Html.PasswordFor(m => m.Password, new { @Value = "xA123456" })
                    @Html.ValidationMessageFor(m => m.Password)
                </td>
            </tr>
            
            <tr>
                <td>
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
                </td>
                <td style="width:120px; text-align:right;">
                    <input id="submit" type="submit" value="登录" />
                </td>
            </tr>
            </tbody>
    </table>
}
</div>
